<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |msg| %>
    $('.new_answer_info').html('<div class="alert alert-danger"><%= j msg %></div>').show();
  <% end %>
<% else %>
  $('.new_answer_info').html('<%= j render 'notice' %>').show();

  <% publish_to "/questions/#{@answer.question.id}/answers" do %>
    $('.answers').append('<%= j render @answer %>');
  <% end %>

  $('#new_answer').find('#answer_body').val('');
<% end %> 
